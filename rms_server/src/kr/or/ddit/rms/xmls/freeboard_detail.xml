<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<!-- namespace속성 : 아래에서 작성한 SQL을 호출할 때 같이 사용된다. -->			
<sqlMap namespace="freeboard_detail">
	<!-- 
		이 영역에 sql문에 맞는 태그를 사용하여 SQL문을 기술한다.
		
		사용할 수 있는 기본적인 태그들
		<select> ~~~ </select>
		<insert> ~~~ </insert>
		<update> ~~~ </update>
		<delete> ~~~ </delete>
	 -->
	 
	 <!-- 
	 	위 태그에서 사용되는 속성들
	 		1) id속성 : 해당 태그를 호출할 때 <sqlMap>태그의 namespace와
	 							  연결하여 사용하는 이름
	 		2) parameterClass속성 : sql문에 사용될 데이터가 들어있는 객체를
	 							  지정한다. 
	 							  (보통 VO클래스, 자바의 자료형이름 등이 사용된다.)
	 							  (typeAlia로 지정한 alias명을 사용할 수 있다.)							  
			3) resultClass속성 : select문을 실행한 결과를 담을 객체를 지정한다.
									(보통 VO클래스나 자바의 자료형이름을 사용한다.)							 
	 -->
	 
	 <!-- insert 연습 -->
	 <insert id="insertfree_detail" parameterClass="Board_detailVO">
	 		insert into board_detail (board_num,custom_id,bc_num,title,content,upd_date,board_img)
	 		values (#board_num#, #custom_id#,1, #title#,
	 		#content#, sysdate,  #board_img#)
	 </insert>
	 
	 <!-- update 연습 (parameterClass에 alias를 지정할 수 있다.) -->
	 <update id="updatefree_detail" parameterClass="Board_detailVO">
	 		update board_detail set board_num=#board_num#,
	 										custom_id=#custom_id#,
	 										bc_num=1,
	 										title=#title#,
	 										content=#content#,
	 										upd_date=to_date(#upd_date#,'yyyy-MM-dd HH24:MI:SS'),
	 										board_cnt=#board_cnt#,
	 										board_img=#board_img#,
	 										com_idx=#com_idx#
	 		where	board_num=#board_num#
	 		and		bc_num=#bc_num#
	 </update>
	 
	 <!-- 
	 		parameterClass에 설정되는 값이 단일값(즉 1개의 데이터)이면
	 		SQL문에 이 값을 나타내는 변수는 특별히 이름이 정해지지 않았다.
	 		(즉, 사용자가 임의로 지정할 수 있다.)
	 -->
	 <!-- delete 연습 -->
	 <delete id="deleteFree_detail" parameterClass="Board_detailVO">
<!-- 	 		delete from mymember where mem_id=#mem_id# -->
			delete from board_detail where board_num=#board_num# and 
											custom_id=#custom_id# and
	 										bc_num=1
	 </delete>
	 
	 <!-- select 연습 -->
	 <select id="getFree_detailAll" resultClass="Board_detailVO">
	 		select board_num,custom_id,bc_num,title,content,
	 		upd_date,board_cnt,board_img,com_idx from board_detail where bc_num=1
	 		order by board_num desc
	 </select>
	 
	 <select id="getFree_detail" resultClass="int" parameterClass="String">
	 		select count(*) from board_detail where board_num=#board_num# and bc_num=1
	 </select>
	 		
	 <select id="getFree_detailTextSearch" resultClass="Board_detailVO" parameterClass="Board_detailVO">
	 		select board_num,custom_id,bc_num,title,content,
	 		upd_date,board_cnt,board_img,com_idx 
	 		from board_detail 
	 		<dynamic prepend="where">
		 		<isNotEmpty property="title" prepend="or">
					title like '%' || #title# || '%'
					and bc_num = 1
				</isNotEmpty>
					<isNotEmpty property="custom_id" prepend="or">
	 				custom_id like '%' || #custom_id# || '%'
					and bc_num = 1
	 			</isNotEmpty>
			</dynamic>
			order by board_num desc
	 </select>
	 
	 		
	 <select id="getSearchFree_detail" parameterClass="Board_detailVO" resultClass="Board_detailVO">
	 		select board_num,custom_id,bc_num,title,content,
	 		upd_date,board_cnt,board_img,com_idx from board_detail
	 		<dynamic prepend="where">
		 		<isNotEmpty property="board_num" prepend="and">
					board_num = #board_num#
				</isNotEmpty>
					<isNotEmpty property="custom_id" prepend="and">
	 				custom_id = #custom_id#
	 			</isNotEmpty>
	 			<isNotEmpty property="bc_num" prepend="and">
					bc_num = 1
				</isNotEmpty>
				<isNotEmpty property="title" prepend="and">
	 				title = #title#
	 			</isNotEmpty>
	 			<isNotEmpty property="content" prepend="and">
					content = #content#
				</isNotEmpty>
					<isNotEmpty property="upd_date" prepend="and">
	 				upd_date = #upd_date#
	 			</isNotEmpty>
	 			<isNotEmpty property="board_cnt" prepend="and">
					board_cnt = #board_cnt#
				</isNotEmpty>
				<isNotEmpty property="board_img" prepend="and">
					board_img = #board_img#
				</isNotEmpty>
				<isNotEmpty property="com_idx" prepend="and">
					com_idx = #com_idx#
				</isNotEmpty>
	 			
	 			
	 		</dynamic>
	 		order by board_num desc
	 </select>

</sqlMap>			





