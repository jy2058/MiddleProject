<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<!-- namespace속성 : 아래에서 작성한 SQL을 호출할 때 같이 사용된다. -->			
<sqlMap namespace="adopt_log">
	<!-- 
		이 영역에 sql문에 맞는 태그를 사용하여 SQL문을 기술한다.
		
		사용할 수 있는 기본적인 태그들
		<select> ~~~ </select>
		<insert> ~~~ </insert>
		<update> ~~~ </update>
		<delete> ~~~ </delete>
	 -->
	 
	 <!-- 
	 	위 태그에서 사용되는 속성들
	 		1) id속성 : 해당 태그를 호출할 때 <sqlMap>태그의 namespace와
	 							  연결하여 사용하는 이름
	 		2) parameterClass속성 : sql문에 사용될 데이터가 들어있는 객체를
	 							  지정한다. 
	 							  (보통 VO클래스, 자바의 자료형이름 등이 사용된다.)
	 							  (typeAlia로 지정한 alias명을 사용할 수 있다.)							  
			3) resultClass속성 : select문을 실행한 결과를 담을 객체를 지정한다.
									(보통 VO클래스나 자바의 자료형이름을 사용한다.)							 
	 -->
	 
	 <!-- insert 연습 -->
	 <insert id="insertAdopt_log" parameterClass="Adopt_LogVO">
	 		insert into adopt_log (custom_id,rd_num,adopt_date,adopt_check,adopt_req,shel_id)
	 		values (#custom_id#, #rd_num#,sysdate, #adopt_check#, #adopt_req#, #shel_id#)
	 </insert>
	 
	 <!-- update 연습 (parameterClass에 alias를 지정할 수 있다.) -->
	 <update id="updateAdopt_log" parameterClass="Adopt_LogVO">
	 		update adopt_log set custom_id=#custom_id#,
	 										rd_num=#rd_num#,
	 										adopt_date=to_date(#adopt_date#,'yyyy-MM-dd HH24:MI:SS'),
	 										adopt_check=#adopt_check#,
	 										adopt_req=#adopt_req#,
	 										shel_id=#shel_id#
	 		where custom_id=#custom_id#
	 </update>
	 
	 <update id="Adopt_Request_Ok" parameterClass="Adopt_LogVO">
	 		update adopt_log set adopt_check=#adopt_check#
          where custom_id = #custom_id# and rd_num = #rd_num#
	 </update>
	 
	 <update id="Adopt_Request_Cancel" parameterClass="Adopt_LogVO">
	 		update adopt_log set adopt_check=#adopt_check#
          where custom_id != #custom_id# and rd_num=#rd_num#
	 </update>
	 
	 <!-- 
	 		parameterClass에 설정되는 값이 단일값(즉 1개의 데이터)이면
	 		SQL문에 이 값을 나타내는 변수는 특별히 이름이 정해지지 않았다.
	 		(즉, 사용자가 임의로 지정할 수 있다.)
	 -->
	 <!-- delete 연습 -->
	 <delete id="deleteAdopt_log" parameterClass="Adopt_LogVO">
			delete from adopt_log where custom_id=#custom_id# 
	 </delete>
	 
	 <delete id="deleteAdopt_logThis" parameterClass="Adopt_LogVO">
			delete from adopt_log where custom_id=#custom_id# and rd_num=#rd_num#
	 </delete>
	 
	 <!-- select 연습 -->
	 <select id="getAdopt_logAll" resultClass="Adopt_LogVO">
	 		select custom_id,rd_num,adopt_date,adopt_check,adopt_req,shel_id from adopt_log
	 </select>
	 
	 <select id="getAdopt_log" resultClass="int" parameterClass="String">
	 		select count(*) from adopt_log where custom_id=#custom_id#
	 </select>
	 
	  
	 
	 <select id="getSearchAdopt_log" parameterClass="Adopt_LogVO" resultClass="Adopt_LogVO">
	 		select custom_id,rd_num,adopt_date,adopt_check,adopt_req,shel_id from adopt_log
	 		<dynamic prepend="where">
		 		<isNotEmpty property="custom_id" prepend="and">
					custom_id = #custom_id#
				</isNotEmpty>
				<isNotEmpty property="rd_num" prepend="and">
	 				rd_num = #rd_num#
	 			</isNotEmpty>
	 			<isNotEmpty property="adopt_date" prepend="and">
					adopt_date = #adopt_date#
				</isNotEmpty>
				<isNotEmpty property="adopt_check" prepend="and">
	 				adopt_check = #adopt_check#
	 			</isNotEmpty>
	 			<isNotEmpty property="adopt_req" prepend="and">
	 				adopt_req = #adopt_req#
	 			</isNotEmpty>
	 			<isNotEmpty property="shel_id" prepend="and">
	 				shel_id = #shel_id#
	 			</isNotEmpty>
	 			
	 		</dynamic>
	 </select>

</sqlMap>			





